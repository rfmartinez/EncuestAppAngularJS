colorHeader = #009E92

html
body
	padding 0
	width 100%
	background #F1F1F1 !important


	header
		background colorHeader
		display inline-block
		vertical-align top
		width 100%
		overflow hidden
		border-bottom 2px solid rgb(221, 64, 41)
		//#D66A9E
		//#7FC1B7

		.titulo
			display inline-block
			vertical-align top
			width 100%
			font-weight bold
			font-size 18px

			.tituloTexto
				color white
				display inline-block
				vertical-align top
				float left
				margin 20px

			.btnEntrar
				cursor pointer
				color white
				font-weight bold				
				margin 14px
				margin-right 25px
				border none
				display inline-block
				vertical-align top
				float right
				background #F9884D
				width 11em
				height 3em
				border-radius 6px
				box-shadow 3px 3px 0px #DD4029

	//section
	//	display block
	//	width 100%

	article
		display inline-block
		vertical-align top
		width 60%
		margin 5px
		overflow hidden	

		.contenido
			margin 7px 0 0 13px
			border-radius 3px
			padding 10px
			display block
			position relative
			width 100%
			background white
			height 300px

			.tituloPregunta
				color #333
				font-size 2em
				margin 3px 3px 15px 3px
			form
				margin 3px 0 2px 20px

				.opciones
					margin 3px 2px 10px 2px
					display block
					position relative
					width 100%
				.botones
					position absolute
					bottom 8px
					right 10px
					display block
					margin 20px 13px 20px 0

					button
						color white
						width 8em
						height 2em
						border none
						background #f9884d
						box-shadow 3px 3px 0 #dd4029
						border-radius 2px
						font-weight bold
						
					

	aside
		display inline-block
		vertical-align top
		background white
		width 35%
		margin 12px

		.ranking
			display block
			padding 7px
			border-radius 5px
			


