colorHeader = #009E92

@font-face {
	font-family: 'nojodaa';
	src:url('../fonts/nojodaa.eot');
	src:url('../fonts/nojodaa.eot?#iefix') format('embedded-opentype'),
		url('../fonts/nojodaa.woff') format('woff'),
		url('../fonts/nojodaa.ttf') format('truetype'),
		url('../fonts/nojodaa.svg#nojodaa') format('svg');
	font-weight: normal;
	font-style: normal;
}

html
body
	padding 0
	width 100%
	background #F1F1F1 !important


	header
		background colorHeader
		display inline-block
		vertical-align top
		width 100%
		overflow hidden
		border-bottom 2px solid rgb(221, 64, 41)
		//#D66A9E
		//#7FC1B7

		.titulo
			display inline-block
			vertical-align top
			width 100%
			font-weight bold
			font-size 18px

			.tituloTexto
				color white
				display inline-block
				vertical-align top
				float left
				margin 20px

			.btnEntrar
				cursor pointer
				color white
				font-weight bold				
				margin 14px
				margin-right 25px
				border none
				display inline-block
				vertical-align top
				float right
				background #F9884D
				padding 10px 20px
				border-radius 6px
				box-shadow 3px 3px 0px #DD4029
			

	section
		article
			display inline-block
			vertical-align top
			width 58%
			margin 1%
			overflow hidden	

			.contenido
				//margin 7px 0 0 13px
				border-radius 3px
				padding 20px
				display block
				position relative
				width 100%
				background white
				//height 300px
				
				.c
					margin 40px 2px 72px 2px


				.tituloPregunta
					color #333
					font-size 2em
					margin 3px 3px 15px 3px
				form
					margin 3px 0 30px 20px

					.opciones
						margin 40px 2px 10px 2px
						display block
						position relative
						width 100%

						.opcion
							margin 4px
							input
								margin 10px
								width 20px
								height 16px
					.botones
						display block
						position relative
						width 100%
						margin 20px 13px 20px 0

						button
							color white
							width 8em
							height 2em
							border none
							background #f9884d
							box-shadow 3px 3px 0 #dd4029
							border-radius 2px
							font-weight bold
							position absolute
							bottom 8px
							right 10px
							
						

		aside
			display inline-block
			vertical-align top
			background white
			width 35%
			margin 1%

			.ranking
				display block
				padding 15px
				border-radius 5px
				

.opciones
	padding 3px 2px 5px 2px



@media screen and (max-width: 810px)
	
	section
		article
			width 97% !important
			.contenido
				width 100%
		aside
			width 97% !important
			.ranking
				width 97%
				margin 5px


@media screen and (max-width: 493px)
	.etc
		display none
	.menu-m
		float right
		text-decoration none
		margin 0.8em
		display block

		&:before
			font-family "nojodaa"
			font-size 36px
			color white
			content "\e60d"
			padding-right 3px